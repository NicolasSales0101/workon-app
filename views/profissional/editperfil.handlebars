                <label for="floatingInput">Nome</label>
            </div>
        </div>

        <div class="col-md">
           <div class="form-floating mb-2">
                <input type="text" name="cidade" class="form-control" id="floatingInput" value="{{usuarios.dataValues.cidade}}" placeholder="Cidade">
                <label for="floatingInput">Cidade</label>
           </div>
        </div>

        <div class="col-md">
            <div class="form-floating mb-2">
                <input type="text" name="telefone" class="form-control" id="floatingInput" value="{{usuarios.dataValues.telefone}}" placeholder="99999-9999">
                <label for="floatingInput">Telefone</label>
            </div>
        </div>
    </div>

    <div class="form-floating mb-2">
      <textarea name="descricao" class="form-control mb-2 ps-3" style="min-height: 150px; max-height: 300px;" id="floatingTextarea" spellcheck="true" placeholder="Descri√ß√£o">{{usuarios.dataValues.descricao}}</textarea>
      <label for="floatingTextarea" class="ps-3">Descri√ß√£o</label>
    </div>

    <div class="form-floating mb-2">
      <select name="profissao" class="form-select" id="floatingSelect">
                {{#each profissionais}}
                    <option value="{{dataValues.id}}">{{dataValues.profissao}}</option>
                {{else}}
                    <option value="0">Nenhuma profissao registrada</option>
                {{/each}}
            </select>
      <label for="floatingSelect">Profiss√£o</label>

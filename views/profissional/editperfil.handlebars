    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar perfil: </h3>
<div class="card">
    <div class="card-body">
        <form action="/profissional/perfil/edit" method="post">
            <input type="hidden" name='id' value="{{usuarios.dataValues.id}}">
            <label for='nome'>Nome: </label>
                <input type="text" name="nome" class="form-control" value="{{usuarios.dataValues.nome}}" required>
            <label for="cidade">Cidade: </label>
                <input type="text" name="cidade" class="form-control" value="{{usuarios.dataValues.cidade}}">
            <label for="telefone">Telefone: </label>
                <input type="text" name="telefone" class="form-control" value="{{usuarios.dataValues.telefone}}">
            <label for="descricao">Sua descrição: </label>
                <textarea name="descricao" class="form-control" cols="30">{{usuarios.dataValues.descricao}}</textarea>
            <select name="profissao" class="form-select">
                {{#each profissionais}}
                    <option value="{{dataValues.id}}">{{dataValues.profissao}}</option>
                {{else}}
                    <option value="0">Nenhuma profissao registrada</option>
                {{/each}}
            </select>
            <button type='submit' class='btn btn-success mt-4'>Editar perfil</button>
        </form>
    </div>
</div>
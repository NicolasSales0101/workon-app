<script>
    var result = '';
     var socket = io()
     var messages = document.getElementById('messages');
     var form = document.getElementById('form');
     var input = document.getElementById('input');
     var sender_id = document.getElementById('emissor_id').value
     var sender_nome = document.getElementById('emissor_nome').value
     var data = new Date();
     var dia = String(data.getDate()).padStart(2, '0');
     var mes = String(data.getMonth() + 1).padStart(2, '0');
     var ano = data.getFullYear();
     dataAtual = dia + '/' + mes + '/' + ano;

     
    form.addEventListener('submit', function(e) {
        e.preventDefault()
        if (input.value) {
            socket.emit('chat message', input.value, sender_id, sender_nome, dataAtual);
            input.value = ''
        }
     })

    socket.on('chat message', function(msg, sender_id, sender_nome, dataAtual) {
        var item = document.createElement('li');
        if (sender_id == document.getElementById('emissor_id').value) {
            item.innerHTML = '<p class="float-end small p-2 ms-3 mb-3 rounded-3" style="background-color: #f5f6f7;">' + msg  + '<small class="text white ms-1" style="font-size: 10px"> [' + dataAtual + ']</small></p><br><br>';    
            messages.appendChild(item);
            window.scrollTo(0, document.body.scrollHeight);
        } else {
            item.innerHTML = '<p class="float-start small p-2 me-3 mb-3 text-white rounded-3 bg-primary">' + '<b>' + sender_nome + ':</b> ' + msg + ' <small class="text white ms-1" style="font-size: 10px"> [' + dataAtual + ']</small></p><br><br>';    
            messages.appendChild(item);
            window.scrollTo(0, document.messages.scrollHeight);
        }
    });

</script>
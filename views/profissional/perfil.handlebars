    <div class="card mt-4">
        <h5 class="card-header"> Chat ðŸ’¬ </h5>
        <div class="card-body">
            <div class="messages" id="messages"></div>
            <form id="form">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Digite sua mensagem" aria-label="Digite sua mensagem" aria-describedby="button-addon2" id="input">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Enviar</button>
